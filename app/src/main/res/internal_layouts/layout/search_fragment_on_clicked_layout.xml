<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/searchFragmentOnclickedViewBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back_button" />

    <EditText
        android:id="@+id/searchFragmentOnClickedViewSearchEditText"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/round_background"
        android:ems="10"
        android:hint='@string/search_birth_paradax'
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/searchFragmentOnclickedViewBackButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchFragmentOnclickedViewBackButton"
        app:layout_constraintTop_toTopOf="@+id/searchFragmentOnclickedViewBackButton" />

    <ImageButton
        android:id="@+id/searchFragmentOnclickedViewSearchClearButton"
        android:layout_width="49dp"
        android:layout_height="50dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/searchFragmentOnClickedViewSearchEditText"
        app:layout_constraintEnd_toEndOf="@+id/searchFragmentOnClickedViewSearchEditText"
        app:layout_constraintTop_toTopOf="@+id/searchFragmentOnClickedViewSearchEditText"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_close_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchFragmentOnClickedRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchFragmentOnClickedViewSearchEditText" />
</androidx.constraintlayout.widget.ConstraintLayout>